                         onerror="this.onerror=null;this.src='https://placehold.co/600x200/00A3FF/ffffff?text=Blount+Shutters+Image+Unavailable'">
                    <div class="p-6">
                        <h4 class="font-extrabold text-2xl text-accent mb-3">Blount Shutters</h4>
